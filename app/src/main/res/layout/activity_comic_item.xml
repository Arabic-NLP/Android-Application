<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#A8ABAC"
    android:layout_margin="4sp"
    app:contentPadding="10sp"
    app:cardElevation="10sp"
    app:cardCornerRadius="4sp"
    tools:context=".Comic_item">


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="0sp"
        android:layout_marginTop="0sp"

        >


        <ImageView
            android:id="@+id/comicphoto"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/ic_comic_photo"

            />


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="0sp"
        android:layout_height="120sp"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >




        <TextView
            android:id="@+id/comicmemelord"

            android:textColor="#97111010"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:text="@string/comicmemelord"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/comictime"

            android:textColor="#97111010"
            android:layout_marginTop="20sp"
            android:layout_marginStart="80sp"
            android:text="@string/comicmemelord"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
    </LinearLayout>









</androidx.cardview.widget.CardView>